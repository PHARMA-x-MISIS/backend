FROM python:3.10-slim
WORKDIR /app

RUN pip install --upgrade pip && \
    pip install \
      fastapi==0.119.0 \
      uvicorn==0.37.0 \
      scikit-learn==1.2.2 \
      numpy==1.24.4 \
      scipy==1.10.1 \
      joblib==1.2.0 \
      aiohttp==3.9.5 \
      pydantic==2.7.4

# Copy only ML sources
COPY ml /app/ml

ENV PYTHONUNBUFFERED=1 \
    ARTIFACTS_DIR=/app/ml/artifacts \
    API_HOST=0.0.0.0 \
    API_PORT=8100

EXPOSE 8100

CMD ["uvicorn", "ml.server:app", "--host", "0.0.0.0", "--port", "8100", "--reload"]


